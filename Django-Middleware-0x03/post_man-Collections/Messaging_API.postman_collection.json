    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Get JWT Token",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"your_password\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/token/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "token",
                                ""
                            ]
                        },
                        "description": "Obtain JWT access and refresh tokens"
                    },
                    "response": []
                },
                {
                    "name": "Refresh JWT Token",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"refresh\": \"your_refresh_token\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/token/refresh/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "token",
                                "refresh",
                                ""
                            ]
                        },
                        "description": "Refresh JWT access token using refresh token"
                    },
                    "response": []
                },
                {
                    "name": "Verify JWT Token",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"token\": \"your_access_token\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/token/verify/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "token",
                                "verify",
                                ""
                            ]
                        },
                        "description": "Verify if JWT token is valid"
                    },
                    "response": []
                }
            ]
        },
